<h1>New product page</h1>

<%= form_for @the_product do |f| %>
	<div>
	<%= f.label :title %>
	<%= f.text_field :title %>
	</div>

	<div>
	<%= f.label :description %>
	<%= f.text_area :description %>
	</div>

	<div>
	<%= f.label :deadline %>
	<%= f.date_field :deadline %>
	</div>

	<div>
	<%= f.label :min_bid %>
	<%= f.text_field :min_bid %>
	</div>

	<%= f.button %>

<%end%>