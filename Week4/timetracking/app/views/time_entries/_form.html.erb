

<%= form_for [@my_project, @my_entry] do |f| %>
	<div>
	<%= f.label :hours %>
	<%= f.text_field :hours %>
	</div>

	<div>
	<%= f.label :minutes %>
	<%= f.text_field :minutes %>
	</div>

	<div>
	<%= f.label :date %>
	<%= f.date_field :date %>
	</div>

	<div>
	<%= f.label :comments %>
	<%= f.text_area :comments %>
	</div>


	<%= f.button %>
	<%= link_to "Cancel", project_time_entries_path(@my_project) %>
<% end %>