<% if @my_entry.errors.any? %>
	<ul>
		<% @my_entry.errors.full_messages.each do |error_msg| %>
		<li><%= error_msg %></li>
		<% end %>
	</ul>
<% end %>

<h2>
	Add a new time entry to:
	<%= @my_project.name %>
</h2>


<%= form_for [@my_project, @my_entry] do |f| %>
	<div>
	<%= f.label :hours %>
	<%= f.text_field :hours %>
	</div>

	<div>
	<%= f.label :minutes %>
	<%= f.text_field :minutes %>
	</div>

	<div>
	<%= f.label :date %>
	<%= f.date_field :date %>
	</div>

	<div>
	<%= f.label :comments %>
	<%= f.text_area :comments %>
	</div>


	<%= f.button %>
<% end %>